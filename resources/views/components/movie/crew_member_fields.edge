<div class="flex gap-3">
  @form.input({ type: 'select', label: 'Crew Member', name: 'crew[${index}][id]' })
    @each(cineast in cineasts)
      <option value="{{ cineast.id }}" {{ html.attrs({ selected: member?.cineast_id === cineast.id}) }}>
        {{ cineast.fullName }}
      </option>

    @endeach
  @end
  @!form.input({ label: 'Title', name: 'crew[${index}][title]', value: member?.title })

    <button type="button" onclick="this.parentElement.remove()">&times;</button>

  </div>
